{
	"name": "api",
	"description": "Tempo Explorer & Apps REST API",
	"version": "1.0.0",
	"type": "module",
	"repository": {
		"type": "git",
		"directory": "apps/api",
		"url": "https://github.com/tempoxyz/tempo-apps"
	},
	"imports": {
		"#*": "./src/*",
		"#schema/*": "./schema/*",
		"#package.json": "./package.json"
	},
	"scripts": {
		"dev": "vite dev",
		"preview": "vite preview",
		"build": "vite build",
		"check": "biome check --write --unsafe",
		"check:types": "tsgo --project tsconfig.json --noEmit",
		"gen:types": "test -f .env || cp .env.example .env; CLOUDFLARE_ENV= wrangler types",
		"tail": "wrangler tail"
	},
	"dependencies": {
		"@hono/zod-validator": "catalog:",
		"add": "catalog:",
		"hono": "catalog:",
		"ox": "catalog:",
		"viem": "catalog:",
		"wagmi": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@cloudflare/vite-plugin": "catalog:",
		"@cloudflare/workers-types": "catalog:",
		"@scalar/api-reference": "^1.43.17",
		"@total-typescript/ts-reset": "catalog:",
		"@types/node": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"wrangler": "catalog:"
	},
	"license": "MIT"
}
